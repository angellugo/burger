<div class="text-center">
  <h1>Eat-Da-Burger!</h1>
  <img class="img" src="/assets/images/cheese-burger.jpg" alt="cheeseburger">
</div>

<main>
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <h2>Un-devoured burgers:</h2>
        {{#each burgers}}
        <div class='undevoured-burgers'>
          {{> burgers/burger-block devouredSection=false}}
        </div>
        {{/each}}
      </div>

      <div class="col-lg-6">
        <h2>Devoured burgers:</h2>
        {{#each burgers}}
        <div class='devoured-burgers'>
          <div>
            {{> burgers/burger-block devouredSection=true}}
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2 class="text-center">Add a burger section</h2>

<div class="row">
  <div class="col s12">

    <form class="create-form">

      <div class="form-group text-center">
        <label for="new-burger">Burger Name:</label>
        <input type="text" id="new-burger" name="name">
        <button type="submit">Add-Da-Burger</button>
      </div>


    </form>

  </div>
</div>