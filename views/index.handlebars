<div class="title-section">
  <div class="text-center">
    <h1>Eat-Da-Burger!</h1>
    <img class="img" src="/assets/images/cheese-burger.jpg" alt="cheeseburger">
  </div>
</div>

<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-5 undevoured-burgers">
        <h2>Un-devoured burgers:</h2>
        {{#each burgers}}
        {{> burgers/burger-block devouredSection=false}}
        {{/each}}
      </div>

      <div class="col-sm-2"></div>

      <div class="col-sm-5 devoured-burgers">
        <h2>Devoured burgers:</h2>
        {{#each burgers}}
        {{> burgers/burger-block devouredSection=true}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<div class="add-a-burger-section">
  <h2 class="text-center">Add a burger section</h2>
  <div class="row">
    <div class="col s12">
      <form class="create-form">
        <div class="form-group text-center">
          <label for="new-burger">Burger Name:</label>
          <input type="text" id="new-burger" name="name">
          <button type="submit" class="btn btn-primary">Add-Da-Burger</button>
        </div>
      </form>
    </div>
  </div>
</div>